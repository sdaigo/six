  "dependencies": {
    "prettier": "^3.2.5",
    "@biomejs/biome": "1.6.3",
    "lefthook": "^1.6.8",
    "turbo": "1.13.2",
    "typescript": "5.4.3"
  },
  "packageManager": "bun@1.0.35"
}
